{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "env": {
    "ANTHROPIC_API_KEY": "@anthropic_api_key",
    "FLASK_SECRET_KEY": "@flask_secret_key"
  },
  "functions": {
    "api/index.py": {
      "maxDuration": 300,
      "memory": 3008
    }
  }
}
