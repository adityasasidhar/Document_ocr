{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "functions": {
    "app.py": {
      "maxDuration": 300
    }
  },
  "env": {
    "FLASK_SECRET_KEY": "@flask_secret_key",
    "ANTHROPIC_API_KEY": "@anthropic_api_key",
    "VERCEL": "true"
  }
}
